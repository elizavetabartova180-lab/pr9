<Window x:Class="pr9_Bartova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr9_Bartova"
        mc:Ignorable="d"
        Title="воюем уахахаха" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="1" Name="WarriorsPanel" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" Margin="20"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button Name="CreateBtn" Content="Создать" 
                    Width="100" Height="30" Margin="5" 
                    Click="CreateBtn_Click"/>
            <Button Name="AttackBtn" Content="Атаковать всех" 
                    Width="120" Height="30" Margin="5" 
                    Click="AttackBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
