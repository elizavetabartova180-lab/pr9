<Window x:Class="pr9_Bartova.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr9_Bartova"
        mc:Ignorable="d"
        Title="воюем уахахаха" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Практическая работа №9" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="10"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="20" Padding="10">
                <StackPanel>
                    <Image Source="Images/warrior1.png" Width="150" Height="150" Margin="0,0,0,10"/>
                    <TextBlock Text="Обычный воин" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Warrior1Health" Text="100" FontSize="30" HorizontalAlignment="Center" Margin="0,10"/>
                    <Button Content="Атаковать (-15)" Width="120" Height="30" Click="Warrior1Attack_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="20" Padding="10">
                <StackPanel>
                    <Image Source="Images/warrior2.png" Width="150" Height="150" Margin="0,0,0,10"/>
                    <TextBlock Text="Легкие доспехи" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Warrior2Health" Text="100" FontSize="30" HorizontalAlignment="Center" Margin="0,10"/>
                    <Button Content="Атаковать (-15)" Width="120" Height="30" Click="Warrior2Attack_Click"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="1" Margin="20" Padding="10">
                <StackPanel>
                    <Image Source="Images/warrior3.png" Width="150" Height="150" Margin="0,0,0,10"/>
                    <TextBlock Text="Тяжелые доспехи" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="Warrior3Health" Text="100" FontSize="30" HorizontalAlignment="Center" Margin="0,10"/>
                    <Button Content="Атаковать (-15)" Width="120" Height="30" Click="Warrior3Attack_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
